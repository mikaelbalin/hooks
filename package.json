{
  "name": "@kaelui/hooks",
  "version": "0.0.5",
  "description": "React hooks library with native browser testing and granular tree-shakable export.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./use-*": {
      "types": "./dist/use-*/use-*.d.ts",
      "import": "./dist/use-*/use-*.mjs",
      "require": "./dist/use-*/use-*.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "dev": "storybook dev -p 6006",
    "build": "tsup",
    "build:storybook": "storybook build",
    "lint": "eslint --ext .ts,.tsx src",
    "format": "prettier --write src",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "create-hook": "node scripts/create-hook.mjs",
    "version": "pnpm build && git add -A",
    "postversion": "git push && git push --tags",
    "release": "node scripts/release.mjs"
  },
  "keywords": [
    "typescript",
    "react",
    "hooks"
  ],
  "author": "Mikael Balin <hello@mikaelbalin.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kaelui/hooks.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "public"
  },
  "packageManager": "pnpm@9.15.5+sha512.845196026aab1cc3f098a0474b64dfbab2afe7a1b4e91dd86895d8e4aa32a7a6d03049e2d0ad770bbe4de023a7122fb68c1a1d6e0d033c7076085f9d5d4800d4",
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@storybook/addon-essentials": "^8.6.4",
    "@storybook/addon-interactions": "^8.6.4",
    "@storybook/blocks": "^8.6.4",
    "@storybook/react": "^8.6.4",
    "@storybook/react-vite": "^8.6.4",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.2.0",
    "@types/node": "^22.13.10",
    "@types/prompts": "^2.4.9",
    "@types/react": "^19.0.10",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/browser": "^3.0.8",
    "@vitest/coverage-v8": "^3.0.8",
    "chalk": "^5.4.1",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-storybook": "^0.11.4",
    "globals": "^16.0.0",
    "jsdom": "^26.0.0",
    "ora": "^8.2.0",
    "playwright": "^1.51.0",
    "prettier": "3.5.3",
    "prompts": "^2.4.2",
    "react": "^19.0.0",
    "storybook": "^8.6.4",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.1",
    "vitest": "^3.0.8",
    "vitest-browser-react": "^0.1.1"
  },
  "peerDependencies": {
    "react": "^19.0.0"
  }
}
